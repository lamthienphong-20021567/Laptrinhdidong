<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/toolbar1"
    tools:context=".screen_04">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@color/yellow"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Chúc mừng bạn đã trả lời đúng"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/score_final"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="5/10"
            android:textSize="48sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="câu hỏi"
            android:textSize="28sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/complete_btn"
        android:layout_width="0dp"
        android:layout_height="105dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="319dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/rounded_borders"
        android:backgroundTint="#E91E63"
        android:text="Hoàn thành"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/share_btn"
        android:layout_width="0dp"
        android:layout_height="105dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="151dp"
        android:text="Chia Sẻ Thành Tích"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:background="@drawable/rounded_borders"
        android:backgroundTint="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/complete_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>